<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Informationactivity">

    <TextView
        android:id="@+id/usertext"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview_information"
        android:drawableEnd="@mipmap/user_not_login"
        android:drawableRight="@mipmap/user_not_login"
        android:text="@string/welcome_inform"
        android:textSize="30sp"
        android:typeface="serif"
        android:gravity="center"
        ></TextView>

    <Button
        android:id="@+id/xiaofei"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@mipmap/xiaofei"
        android:drawableRight="@mipmap/right"
        android:background="@drawable/textview_inform"
        android:padding="10dp"
        android:text="@string/xiaofei"
        android:textSize="20sp"
        android:gravity="center"
        android:drawableStart="@mipmap/xiaofei"
        android:drawableEnd="@mipmap/right"></Button>
    <Button
        android:id="@+id/fapiao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/fapiao"
        android:background="@drawable/textview_inform"
        android:drawableLeft="@mipmap/fapiao"
        android:drawableRight="@mipmap/right"
        android:drawableEnd="@mipmap/right"
        android:padding="10dp"
        android:text="@string/fapiao"
        android:textSize="20sp"
        android:gravity="center"></Button>
    <Button
        android:id="@+id/tousu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textview_inform"
        android:drawableStart="@mipmap/tousu"
        android:drawableLeft="@mipmap/tousu"
        android:drawableRight="@mipmap/right"
        android:drawableEnd="@mipmap/right"
        android:padding="10dp"
        android:text="@string/tousu"
        android:textSize="20sp"
        android:gravity="center"></Button>
    <Button
        android:id="@+id/amend"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textview_inform"
        android:drawableStart="@mipmap/amend"
        android:drawableLeft="@mipmap/amend"
        android:drawableRight="@mipmap/right"
        android:drawableEnd="@mipmap/right"
        android:padding="10dp"
        android:text="@string/amend"
        android:textSize="20sp"
        android:gravity="center"></Button>
    <Button
        android:id="@+id/wendang"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textview_inform"
        android:drawableStart="@mipmap/wendang"
        android:drawableLeft="@mipmap/wendang"
        android:drawableRight="@mipmap/right"
        android:drawableEnd="@mipmap/right"
        android:padding="10dp"
        android:text="@string/wendang"
        android:textSize="20sp"
        android:gravity="center"></Button>
    <Button
        android:id="@+id/hezuowoshou"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textview_inform"
        android:drawableStart="@mipmap/hezuowoshou"
        android:drawableLeft="@mipmap/hezuowoshou"
        android:drawableRight="@mipmap/right"
        android:drawableEnd="@mipmap/right"
        android:padding="10dp"
        android:text="@string/hezuowoshou"
        android:textSize="20sp"
        android:gravity="center"></Button>
</LinearLayout>